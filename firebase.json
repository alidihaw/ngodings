{
    "hosting": {
      "public": "./dist/ngodings",
      "site": "ngodings-npm",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/public/**",
          "destination": "/public.html"
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }